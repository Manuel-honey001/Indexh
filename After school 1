<!DOCTYPE html><html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>After School - J'y serai</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #111;
      color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 2rem;
    }
    canvas {
      max-width: 100%;
      border: 2px solid #444;
      margin-top: 1rem;
    }
    input[type="file"] {
      margin-bottom: 1rem;
    }
    .button {
      background: gold;
      color: #000;
      font-weight: bold;
      border: none;
      padding: 0.6rem 1.2rem;
      margin-top: 1rem;
      cursor: pointer;
      border-radius: 6px;
    }
  </style>
</head>
<body>
  <h1>Personnalise ton affiche "AFTER SCHOOL"</h1>
  <input type="file" id="upload" accept="image/*" />
  <canvas id="canvas" width="1080" height="1555"></canvas>
  <button class="button" onclick="downloadImage()">Télécharger l'affiche</button>  <script>
    const canvas = document.getElementById("canvas");
    const ctx = canvas.getContext("2d");
    const upload = document.getElementById("upload");

    const baseImage = new Image();
    baseImage.src = "affiche-base.jpg"; // <== À remplacer par ton image de base sans les visages
    baseImage.onload = () => {
      ctx.drawImage(baseImage, 0, 0, canvas.width, canvas.height);
    };

    upload.addEventListener("change", (e) => {
      const file = e.target.files[0];
      if (!file) return;

      const reader = new FileReader();
      reader.onload = function (event) {
        const userImg = new Image();
        userImg.src = event.target.result;
        userImg.onload = () => {
          ctx.clearRect(0, 0, canvas.width, canvas.height);

          // Dessiner la photo de l'utilisateur en zone centrale (ajuste selon le besoin)
          ctx.drawImage(userImg, 150, 500, 780, 520);

          // Dessiner par-dessus l'affiche originale (texte After School etc.)
          ctx.drawImage(baseImage, 0, 0, canvas.width, canvas.height);

          // Ajouter le texte "J'y serai" en doré
          ctx.font = "bold 60px Arial";
          ctx.fillStyle = "gold";
          ctx.textAlign = "center";
          ctx.fillText("J'y serai !", canvas.width / 2, canvas.height - 80);
        };
      };
      reader.readAsDataURL(file);
    });

    function downloadImage() {
      const link = document.createlement("a");
      link.download = "affiche-jy-serai.png";
      link.href = canvas.toDataURL();
      link.click();
    }
  </script></body>
</html>
